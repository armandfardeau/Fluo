<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neopixl.fluo.activity.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/login_edittext_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/placeholder_login_username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/login_edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/placeholder_login_password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/login_edittext_username"
        app:layout_constraintRight_toRightOf="@+id/login_edittext_username"
        app:layout_constraintTop_toBottomOf="@+id/login_edittext_username" />

    <Button
        android:id="@+id/login_button_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_signin"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/login_edittext_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/login_edittext_username"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_edittext_username"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
